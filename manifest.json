{
    "manifest_version": 3,
    "name": "WhatsApp Exporter Extension",
    "version": "1.0",
    "description": "Export WhatsApp group contacts",

    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },

    "host_permissions": [
        "https://web.whatsapp.com/*"
    ]

}